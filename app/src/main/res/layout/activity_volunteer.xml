<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Volunteer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#3700B3"
        android:orientation="horizontal"

        android:id="@+id/layout1"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:ignore="InvalidId">

    </LinearLayout>





    <ImageView
        android:id="@+id/volunteer_image"
        android:layout_width="320dp"
        android:layout_marginStart="50dp"
        android:layout_below="@id/layout1"
        android:layout_marginTop="20dp"

        android:layout_height="300sp"
        android:background="@drawable/volunteer1"
        android:layout_marginLeft="50dp" />
    <EditText
        android:layout_below="@id/volunteer_image"
        android:id="@+id/volunteer_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:background="@drawable/input"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:hint="   Name"
        android:textColorHint="#000000"
        />
    <EditText
        android:layout_below="@+id/volunteer_name"
        android:id="@+id/volunteer_dob"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:textSize="20sp"
        android:background="@drawable/input"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20sp"
        android:textColorHint="#000000"
        android:hint="   Date Of Birth"
        />
    <EditText
        android:textColorHint="#000000"
        android:layout_below="@+id/volunteer_dob"
        android:id="@+id/volunteer_type_of_work"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:background="@drawable/input"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20sp"
        android:hint="   Type Of Work"
        />
    <EditText
        android:layout_below="@+id/volunteer_type_of_work"
        android:id="@+id/volunteer_occupation"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:background="@drawable/input"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20sp"
        android:textColorHint="#000000"
        android:hint="   Occupation"
        />
    <EditText
        android:layout_below="@+id/volunteer_occupation"
        android:id="@+id/volunteer_address"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:background="@drawable/input"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20sp"
        android:textColorHint="#000000"
        android:hint="   Address"
        />

    <Button
        android:id="@+id/volunteer_submit"
        android:layout_width="250dp"

        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"

        android:textStyle="bold" />


</RelativeLayout>