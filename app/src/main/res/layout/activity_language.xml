<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#f5f2d0"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:background="@drawable/lang_background"
        android:gravity="bottom"

        >





    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="5.5">

        <GridLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:rowCount="5"
            android:layout_marginTop="10dp"


            android:columnCount="3">



   <androidx.cardview.widget.CardView
       android:layout_width="0dp"
       android:layout_height="90dp"
       android:id="@+id/english"

       android:layout_columnWeight="1"
       android:layout_row="0"
       android:layout_column="0"
       android:layout_marginRight="10dp"
       android:layout_marginLeft="25dp"
       app:cardCornerRadius="10dp"
       android:elevation="5dp"
       >  <LinearLayout
       android:id="@+id/langchangetoenglish"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="English"
            android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           />
   </LinearLayout>

   </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:id="@+id/hindi"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_column="1"

                >
                <LinearLayout
                    android:id="@+id/langchangetohindi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="हिन्दी"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_marginLeft="10dp"
                android:layout_column="2"
                android:id="@+id/punjabi"

                android:layout_marginRight="23dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ਪੰਜਾਬੀ"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                app:cardCornerRadius="10dp"
                android:id="@+id/urdu"
                android:elevation="5dp"
                >  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اردو"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                android:id="@+id/tamil"
                android:elevation="5dp"
                android:layout_row="1"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_column="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="தமிழ்"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:id="@+id/malayalam"
                android:layout_row="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_column="2"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="മലയാളം"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/telgue"
                android:layout_columnWeight="1"
                android:layout_row="2"

                android:layout_marginTop="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                >  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="తెలుగు"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    />
            </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/gujarati"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_row="2"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_column="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ગુજરાતી"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:id="@+id/kannada"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_column="2"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ಕನ್ನಡ"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:id="@+id/marathi"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                >  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="मराठी"
                    android:textColor="#000000"
                android:textStyle="bold"
                    android:textSize="25sp"
                    />
            </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/nepali"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_row="3"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_column="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="नेपाली"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:id="@+id/odiya"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_column="2"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ଘୃଣା କରେ"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:textSize="25sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </GridLayout>



    </ScrollView>
    <LinearLayout
        android:id="@+id/selectlinearlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center"

        >
        <Button
            android:id="@+id/selectlanguageasap"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Select"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_input_bg"
            ></Button>


    </LinearLayout>

</LinearLayout>