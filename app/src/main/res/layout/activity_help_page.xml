<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpPage"
    android:background="#ffffff"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/generate_btn"
           >


            <TextView
                android:id="@+id/helpquote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/there_is_a_free_platform_for_everyone_and_always_will_be_just_select_the_problem_and_we_will_do_or_best_to_sort_it_out"
                android:textColor="#000000"

                android:textSize="19sp"
                android:gravity="center"


                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"


         />
            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="#E46E48"
                android:layout_marginTop="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"

                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/img11"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >


        <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:gravity="center"

        android:id="@+id/li1"
        tools:ignore="RtlCompat">

        <TextView
            android:id="@+id/Select_Problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Select_Problem"
            android:textSize="27sp"
            android:textStyle="bold"

            android:textColor="#E46E48"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radio1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           android:buttonTint="#E46E48"
                android:textStyle="bold|italic"
                android:paddingLeft="18dip"





                android:text="@string/need_help_for_others"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"
                android:buttonTint="#E46E48"
                android:paddingLeft="18dip"


                android:text="@string/need_help_for_yourself"
                android:textSize="24sp" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation ="vertical"
        android:id="@+id/ll8"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:layout_below="@id/lh3"
        android:layout_marginTop="30dp"

        >
        <TextView
            android:id="@+id/TypeOfHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_type_of_help"
            android:textSize="23sp"
            android:layout_gravity="center_horizontal"

            android:textColor="#000000"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"


            android:fontFamily="sans-serif-medium"
            android:spinnerMode="dialog"
            android:textSize="20sp"
            android:background="@drawable/spinnerbord"
            android:splitMotionEvents="true"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:ignore="RtlCompat" />


    </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lh3"
                android:orientation="vertical"
                >
                <TextView
                        android:id="@+id/enterinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/enter_information"
                        android:textSize="25sp"
                        android:textStyle="bold"
                    android:textColor="#E46E48"
                    android:layout_gravity="center_horizontal"

                    />
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/name"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_background"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:gravity="left|center"
                        android:hint="@string/Name"
                        android:paddingLeft="10dp"

                        ></EditText>
                    <EditText
                        android:id="@+id/occupation"
                        android:layout_marginTop="28dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_background"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:hint="@string/Occupation"

                        ></EditText>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/getCurrentLocation"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:background="@drawable/addborder"
                        android:text="@string/get_current_location"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="10dp">
                    </Button>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:id="@+id/orr"
                        android:text="@string/or_give_address_below"
                        android:layout_gravity="center_horizontal"
                        android:textSize="19sp"
                        android:layout_marginTop="20dp"/>
                    <EditText
                        android:id="@+id/address"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_background"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:hint="@string/Address"

                        ></EditText>



                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/iddd"
                            android:text="@string/please_add_any_government_id_proof_like_aadhar_card_pan_card_voter_id_driving_liscence_rashan_card"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center_horizontal">
                        </TextView>
                        <ImageView
                            android:id="@+id/idProof"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:visibility="gone"
                            >
                        </ImageView>
                        <Button
                            android:id="@+id/cameraIntent"
                            android:layout_marginTop="17dp"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:background="@drawable/donateborder"
                            android:text="@string/use_camera"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"></Button>
                    </LinearLayout>

                </LinearLayout>

"



                <Button

                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/submitRequest"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Submit"

                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:background="@drawable/border45"
                    >

                </Button>





            </LinearLayout>


        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>




</ScrollView>