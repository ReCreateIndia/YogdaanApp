<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".DonateActivity"
    android:weightSum="10"

   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
            android:layout_weight="9">
        <RelativeLayout
            android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"

                android:orientation="vertical"

                android:id="@+id/lll22"
                android:background="@drawable/img1"


                tools:ignore="MissingConstraints"

             >


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:text="Help"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_marginLeft="35dp"







             />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_below="@id/lll22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="22dp"



                android:orientation="vertical">


            <TextView
                android:id="@+id/helpquote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The best way to persue happiness is to help others"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="18dp"
                android:gravity="center"


               android:layout_below="@id/lll22"
                 />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="60dp"
                >
                <Button
                    android:id="@+id/donate_money_btn"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:elevation="10dp"



                    android:background="@drawable/donateborder"
                    android:textColor="#000000"
                    android:text="@string/donate_money"
                    android:textAllCaps="false"
                    android:textSize="20sp" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/donate_add"
                    android:layout_width="200dp"
                    android:layout_marginTop="25dp"

                    android:layout_height="48dp"
                    android:background="@drawable/border45"
                    android:textColor="#ffffff"
                    android:elevation="10dp"
                    android:text="@string/donate_by_watching_ads"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"


                    />  </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                >

            <com.google.android.gms.ads.AdView
                android:layout_gravity="bottom"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintVertical_weight="1"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-8657920857471834/6724926610"

                />
</LinearLayout>

</LinearLayout>