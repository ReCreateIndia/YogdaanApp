<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"

    >
    <com.google.android.material.navigation.NavigationView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/n1"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/nav_menu"
        >

    </com.google.android.material.navigation.NavigationView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lhmp1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sliderback">


            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="wrap_content"
                android:layout_height="280dp"

                app:auto_cycle="true"
                app:corner_radius="20"
                android:layout_alignParentTop="true"
                app:period="1000"
                app:delay="0"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/lhmp1"
            android:layout_marginTop="80dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                tools:ignore="RtlCompat">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="horizontal"
                    android:weightSum="3"

                    >

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                        <ImageButton
                            android:id="@+id/help"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"


                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/help"
                            android:elevation="7dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Help"
                            android:gravity="center"
                                android:id="@+id/Help"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="45dp"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/donate"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/donation"
                            android:elevation="8dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donate"
                            android:id="@+id/Donate"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_marginStart="42dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/ourWork"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/ourwork"
                            android:elevation="8dp"



                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Our Work"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:id="@+id/Our_Work"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>








                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="horizontal"
                    android:weightSum="3"

                    >
                    <LinearLayout
                        android:layout_width="80dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/ourHelpers"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/ourhelpers"
                            android:elevation="7dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Our helpers"
                            android:id="@+id/Our_Helpers"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_marginStart="45dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/volunteer"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/volunteer"
                            android:elevation="7dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Volunteer"
                            android:id="@+id/Volunteers"

                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_marginStart="45dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/more"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/more"
                            android:elevation="7dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="More"
                            android:id="@+id/More"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>
                </LinearLayout>










            </RelativeLayout>


        </ScrollView>
    </RelativeLayout>




</androidx.drawerlayout.widget.DrawerLayout>