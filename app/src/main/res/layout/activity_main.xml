<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"

    >
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/n1"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header"
        app:menu="@menu/nav_menu"
        >

    </com.google.android.material.navigation.NavigationView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        >
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:auto_cycle="true"
            app:corner_radius="20"
            android:layout_alignParentTop="true"
            app:period="1000"
            app:delay="0"
            tools:ignore="MissingConstraints" />

        <ScrollView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_marginBottom="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                tools:ignore="RtlCompat">

                <LinearLayout
                    android:id="@+id/l11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_gravity="center"

                    >

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="70dp"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/donate"
                            android:layout_width="100dp"
                            android:layout_height="100dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/ow"

                            />
                        <TextView
                            android:id="@+id/Donate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donate"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:textColor="#0000A0"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="45dp"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/help"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ow"
                            />
                        <TextView
                            android:id="@+id/Help"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Help"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:textColor="#0000A0"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_gravity="center"

                    >

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="60dp"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/ourWork"
                            android:layout_width="100dp"
                            android:layout_height="100dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/ourhelpers"

                            />
                        <TextView
                            android:id="@+id/Our_Work"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Our Work"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#0000A0"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/ourHelpers"
                            android:layout_width="100dp"
                            android:layout_height="100dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/ow"

                            />
                        <TextView
                            android:id="@+id/Our_Helpers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Our helpers"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#0000A0"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginBottom="100dp"

                    >

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_marginLeft="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/volunteer"
                            android:layout_width="100dp"
                            android:layout_height="100dp"

                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"

                            android:src="@drawable/ourhelpers"

                            />
                        <TextView
                            android:id="@+id/Volunteers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Volunteers"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:textColor="#0000A0"
                            android:layout_marginTop="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_marginStart="45dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/more"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/btn"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ow"

                            />
                        <TextView
                            android:id="@+id/More"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="More"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:textColor="#0000A0"
                            />
                    </LinearLayout>
                </LinearLayout>










            </LinearLayout>


        </ScrollView>
    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>